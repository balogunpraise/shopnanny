<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;700&display=swap" rel="stylesheet">
        @*<link rel="stylesheet" href="~/css/bootstrap.min.css" type="text/css"/>*@
        <style>
            *{
                box-sizing: border-box;
                padding: 0;
                margin: 0;
            }
            .container{
                width: 100vw;
                height: 100vh;
                background: white;
                color: rgb(8,7,16);
            }
            nav{
                display: flex;
                align-items: center;
                justify-content: space-between;
                padding: 30px 8%;
                position: fixed;
                top: 0;
                width: 100%;
                background: white;
                z-index: 1;
            }
            .logo{
                width: 120px;
                cursor: pointer;
            }
            .nav-icons a{
                margin-left: 30px;
                cursor: pointer;
                font-size: 16px;
            }
            .row{
                height: 100%;
                width: 100%;
                display: flex;
                /*background: rgb(231,171,60);*/
            }
            .col-1, .col-2{
                flex-basis: 50%;
                height: 100%;
                display: flex;
                justify-content: center;
                flex-direction: column;
            }
            .col-2{
                background: rgb(231,171,60);
                padding-top: 8%;
            }
            .col-1{
                padding-left: 8%;
            }
            .col-1 h1{
                font-size: 74px;
                line-height: 100px;
                margin-bottom: 5px;
            }
            .col-1 h2{
                font-size: 35px;
                margin-top: 60px;
                font-weight: 500;
            }
            button{
                display: inline-block;
                width: fit-content;
                padding: 18px 50px;
                background: rgb(231,171,60);
                color: #fff;
                border: none;
                font-size: 18px;
                margin-top: 20px;
                cursor: pointer;
                transition: transform 0.5s;
            }
            button:hover{
                background: rgba(231,171,60,.7);
                transform: translateY(-5px);
            }
            .feature-img{
                width: 100%;
                text-align: center;
            }
            .feature-img img{
                width: 80%;
                /*transform: rotate(-20deg);*/
            }
            .small-img-row{
                display: flex;
                width: 80%;
                margin: 70px auto 0;
                align-items: center;
                justify-content: space-around;
            }
            .small-img{
                width:80px;
                height: 80px;
                background: #ccc;
            }
            .small-img img{
                width: 100%;
                /*transform: translate(-50px, 20px) rotate(-20deg);*/
            }
            a{
                text-decoration: none;
                color: rgb(8,7,16);
            }
            body{
                font-family: 'Roboto', sans-serif;
            }
            .initial{
                text-decoration: line-through;
                font-size: 20px;
                color: #ccc;
            }
        </style>
    </head>
    <body>
        <div class="container">
            <nav>
                <a asp-action="Index" asp-controller="Home"><h1 class="logo">SHOPNANNY</h1></a>
                <div class="nav-icons">
                    <a><span class="material-symbols-outlined">search</span></a>
                    <a><span class="material-symbols-outlined">shopping_bag</span></a>
                    <a><span class="material-symbols-outlined">menu</span></a>
                </div>
            </nav>
            <div style="height:100%; width: 100%;" class="row">
            @{
                var productname = product.Name;
                var splitName = productname.Split(" ");

            }
                <div class="col-1">
                    <h1>
                        @productname
                    </h1>
                    <p>@product.Description</p>
                    <h2>₦@((product.Price).ToString("#.##")) <span class="initial">₦@(((product.Price)+3000).ToString("#.##"))</span></h2>
                    <button type="button">ADD TO CART</button>
                </div>
                <div class="col-2">
                    <div class="feature-img">
                        <img src="@product.ProductImages[0].ImageUrl" />
                    </div>
                    <div class="small-img-row">
                        @foreach(var image in product.ProductImages)
                        {
                            <div class="small-img">
                                <img src="@image.ImageUrl" />
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>